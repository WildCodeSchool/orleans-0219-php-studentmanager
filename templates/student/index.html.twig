{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-sm-offset-1 col-md-offset-3 col-xs-8 col-sm-8 col-md-6">
            <h1>Student index</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Birthday</th>
                    <th>Sex</th>
                    <th>PostalAdress</th>
                    <th>PostalCode</th>
                    <th>Town</th>
                    <th>PhoneNumber</th>
                    <th>Funding</th>
                    <th>InsuranceCompany</th>
                    <th>InsuranceNumber</th>
                    <th>PoleEmploiId</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.birthday ? student.birthday|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ student.sex }}</td>
                        <td>{{ student.postalAdress }}</td>
                        <td>{{ student.postalCode }}</td>
                        <td>{{ student.town }}</td>
                        <td>{{ student.phoneNumber }}</td>
                        <td>{{ student.funding }}</td>
                        <td>{{ student.insuranceCompany }}</td>
                        <td>{{ student.insuranceNumber }}</td>
                        <td>{{ student.poleEmploiId }}</td>
                        <td>
                            <a href="{{ path('student_show', {'id': student.id}) }}">show</a>
                            <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('student_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
