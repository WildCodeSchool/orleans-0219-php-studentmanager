{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-sm-offset-1 col-md-offset-3 col-xs-8 col-sm-10 col-md-10">
            <h1>Tableaux de bord</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Anniversaire</th>
                    <th>Adresse</th>
                    <th>Code postal</th>
                    <th>Ville</th>
                    <th>Téléphone</th>
                    <th>Financement</th>
                    <th>Assurance</th>
                    <th>Numéro d'assurance</th>
                    <th>id pole emploi</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.birthday ? student.birthday|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ student.postalAdress }}</td>
                        <td>{{ student.postalCode }}</td>
                        <td>{{ student.town }}</td>
                        <td>{{ student.phoneNumber }}</td>
                        <td>{{ student.funding }}</td>
                        <td>{{ student.insuranceCompany }}</td>
                        <td>{{ student.insuranceNumber }}</td>
                        <td>{{ student.poleEmploiId }}</td>
                        <td>
                            <a href="{{ path('student_show', {'id': student.id}) }}">show</a>
                            <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('student_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
