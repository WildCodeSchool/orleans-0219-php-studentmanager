{% extends 'base.html.twig' %}


{% block title %}Student{% endblock %}

{% block body %}
<div class="container">

        <h1>Mes informations</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Date de Naissance</th>
                <td>{{ student.birthday ? student.birthday|date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ student.sex }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ student.postalAdress }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ student.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ student.town }}</td>
            </tr>
            <tr>
                <th>Numéro de Téléphone</th>
                <td>{{ student.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Financemet</th>
                <td>{{ student.funding }}</td>
            </tr>
            <tr>
                <th>Companie d'assurence</th>
                <td>{{ student.insuranceCompany }}</td>
            </tr>
            <tr>
                <th>Numéro de sociétaire</th>
                <td>{{ student.insuranceNumber }}</td>
            </tr>
            <tr>
                <th>Identifiant Pole Emploi</th>
                <td>{{ student.poleEmploiId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_edit', {'id': student.id}) }}"><button type="button" class="btn">Modifier</button></a>


</div>

{% endblock %}
