{% extends 'layoutUser.html.twig' %}

{% block title %}Students Manager{% endblock %}

{% block body %}
    <div class="card">
        <div class="containercheckindate container-fluid">
            <div class="form-group">
                <div class="body-checkin">
                    <div class="today">
                        <div class="today-piece top day"></div>
                        <div class="today-piece middle date"></div>
                        <div><span id="heure" class="hour"></span></div>
                        <div class="today-piece middle month"></div>
                        <div class="today-piece bottom year"></div>
                    </div>
                    <div>
                        <div class="form-row text-center">
                            <div class="col-12">
                                {{ form_start(form) }}
                                <input type="submit" class="btn btn-checkin btn-lg center-block" name="submit"
                                       value="Signale ta présence !">
                                {{ form_end(form) }}
                                <div class=" message alert alert-horaire" role="alert">
                                    <p class="HourCheckinDate">Les horaires pour signaler ta présence sont :</p>
                                    <p><strong class="strongHourCheckinDate">7h-10h</strong> le matin et <strong class="strongHourCheckinDate">12h-15h</strong> pour l'après-midi</p>
                                    <p class="mb-0">Au delà de <strong class="strongHourCheckinDate">09h05 et 14h05</strong> tu seras considéré comme étant <strong class="strongHourCheckinDate">en retard</strong></p>
                                    <p class="mb-0">Et au delà de <strong class="strongHourCheckinDate">10h et 15h</strong>, tu seras considéré comme étant <strong class="strongHourCheckinDate">absent</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
