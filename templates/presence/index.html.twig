{% extends 'layoutAdmin.html.twig' %}

{% block title %}Presence index{% endblock %}

{% block body %}
    <h1>Tableau mensuel des présences / retards / absences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Retards</th>
                <th>Absences</th>
            </tr>
        </thead>
        <tbody>
        {% for presence in presences %}
            <tr>
                <td>{{ presence.date ? presence.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('presence_show', {'id': presence.id}) }}">Voir</a>
                    <a href="{{ path('presence_edit', {'id': presence.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('presence_new') }}">Créer un nouveau</a>
{% endblock %}
