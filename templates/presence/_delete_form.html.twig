<form method="post" action="{{ path('presence_delete', {'id': presence.id}) }}"
      onsubmit="return confirm('Etes vous sure de vouloir supprimer cette ligne ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ presence.id) }}">
    <button class="btn">Supprimer</button>
</form>
