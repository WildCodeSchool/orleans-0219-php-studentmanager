{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="h1-signup">Inscription</h1>
    </div>
    <div class="form container">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.username) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            {{ form_row(form.plainPassword.second) }}
        </div>
        <button type="submit" class="btn btn-signup btn-lg btn-block ">Enregistrer mes informations</button>
        {{ form_end(form) }}
    </div>

{% endblock %}
