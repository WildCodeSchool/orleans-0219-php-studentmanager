{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="col-sm-offset-1 col-md-offset-3 col-xs-8 col-sm-8 col-md-6">
            <h1 class="h1-signup font-weight-bold">Inscris-toi ici</h1>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.email, {'attr': {'placeholder': 'Entre ton adresse email'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.username, {'attr': {'placeholder': 'Entre ton nom d\'utilisateur'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Cr√©er ton mot de passe'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirme ton mot de passe'}}) }}
            </div>
            <button type="submit" class="btn btn-signup btn-lg btn-block ">Enregistrer mes informations</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
