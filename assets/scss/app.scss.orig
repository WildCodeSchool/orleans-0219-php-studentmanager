.intro {
  margin-bottom: 0.85em;
  border-radius: 0.25rem;
  padding: 1.25rem;
  font-size: 1.2em;
  font-weight: 200;
  text-align: center;
  color: $primary-color;
}

.tr-mes-informations {
  background-color: $tr-mes-informations;
  border-radius: 50%;
  padding: 1.6rem;
  font-size: 1.25em;
  text-align: center;
  background: $background-color;
}

/* Piece positions
   -------------------------------------------------- */

.top {
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.middle {
  border-radius: 0;
}

.bottom {
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}


/* Piece categories
   -------------------------------------------------- */

.day,
.year {
